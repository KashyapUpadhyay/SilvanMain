<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/mood_bg"
    android:orientation="horizontal"
   >

    <LinearLayout
        android:id="@+id/moodMaster"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/round_box"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/mood_master_unselected" />

        <TextView
            android:id="@+id/txtMood"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mood_unselected_textbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="Master On"
            android:textSize="@dimen/mood_bottom_text_size" />
    </LinearLayout>


</LinearLayout>