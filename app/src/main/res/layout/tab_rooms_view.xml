<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#7F000000"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/header_sysytem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tab_system"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="System"
            
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_tab_system_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#33B5E6"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/header_ac"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tab_ac"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="AC"
            
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider" />

        <ImageView
            android:id="@+id/img_tab_ac_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tab_ac"
            android:background="#33B5E6"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_media"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tab_media"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Media"
          
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider" />

        <ImageView
            android:id="@+id/img_tab_media_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tab_media"
            android:background="#33B5E6"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_electricals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tab_electricals"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Electricals"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider" />

        <ImageView
            android:id="@+id/img_tab_ele_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tab_electricals"
            android:background="#33B5E6"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>