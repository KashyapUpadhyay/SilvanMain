<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/view_dimmer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/dimmer" />

            <HorizontalScrollView
                android:id="@+id/scrollViewDimmer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fadingEdge="none"
                android:scrollbarSize="2dp" >

                <LinearLayout
                    android:id="@+id/linearDimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_curtain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/curtain" />

            <HorizontalScrollView
                android:id="@+id/scrollViewCurtain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fadingEdge="none"
                android:scrollbarSize="2dp" >

                <LinearLayout
                    android:id="@+id/linearCurtain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/light" />

            <HorizontalScrollView
                android:id="@+id/scrollViewLight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fadingEdge="none"
                android:scrollbarSize="2dp" >

                <LinearLayout
                    android:id="@+id/linearLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_mood_room"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/mood_bottom_view" />
    </LinearLayout>

</RelativeLayout>