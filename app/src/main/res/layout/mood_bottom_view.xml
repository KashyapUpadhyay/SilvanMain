<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/mood_bg"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/moodMasterOn"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/round_box"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMoodOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/mood_master_unselected" />

        <TextView
            android:id="@+id/txtMood"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mood_unselected_textbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="Master On"
            android:textSize="@dimen/mood_bottom_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moodMasterOff"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/round_box"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMoodOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/mood_master_unselected" />

        <TextView
            android:id="@+id/txtMoodOff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mood_unselected_textbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="Master Off"
            android:textSize="@dimen/mood_bottom_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moodMorning"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/round_box"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMoodMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/mood_morning_unselected" />

        <TextView
            android:id="@+id/txtMoodMorning"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mood_unselected_textbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="Morning"
            android:textSize="@dimen/mood_bottom_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moodEvening"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/round_box"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMoodEvening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/mood_evening_unselected" />

        <TextView
            android:id="@+id/txtMoodEvening"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mood_unselected_textbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="Evening"
            android:textSize="@dimen/mood_bottom_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moodDinner"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/round_box"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMoodDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/mood_evening_unselected" />

        <TextView
            android:id="@+id/txtMoodDinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mood_unselected_textbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="Dinner"
            android:textSize="@dimen/mood_bottom_text_size" />
    </LinearLayout>

   

</LinearLayout>