<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Please Enter Your Config Number"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtConfigNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 1001"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#626262"
        android:textSize="18sp" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="If you do not have it, Please contact support@silvanlabs.com"
        android:textColor="#000000"
        android:textSize="18sp" />
    
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/font_popup_line" />

    <Button
        android:id="@+id/btn_config_ok"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/ip_ok_selector"
        android:gravity="center"
        android:text="OK"
        android:textColor="#535353"
        android:textSize="18dp" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/font_popup_line" />
    
    <TextView
        android:id="@+id/txtOr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="14sp"
        android:textColor="#626262"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    
    <Button
        android:id="@+id/btn_demo"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/ip_demo_selector"
        android:gravity="center"
        android:text="Switch to Demo"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</LinearLayout>