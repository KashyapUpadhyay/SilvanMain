<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#7F000000"
    android:orientation="horizontal"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tab_config"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="CONFIGURATION"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_tab_config_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tab_config"
            android:background="#33B5E6"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tab_schedule"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="SCHEDULING"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider" />

        <ImageView
            android:id="@+id/img_tab_schedule_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tab_schedule"
            android:background="#33B5E6"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tab_status"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="STATUS"
        
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider" />

        <ImageView
            android:id="@+id/img_tab_status_bottom"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tab_status"
            android:background="#33B5E6"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>